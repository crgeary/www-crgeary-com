{
    "name": "www-crgeary-com",
    "private": true,
    "description": "My personal website.",
    "author": "Christopher Geary <hello@crgeary.com>",
    "scripts": {
        "build": "npm run build:scss && npm run build:html",
        "build:scss": "sass ./src/sass:./dist/css",
        "build:html": "node ./bin/build.js",
        "format": "prettier --ignore-path .gitignore --write .",
        "check-format": "prettier --list-different --ignore-path .gitignore .",
        "lint": "eslint --ignore-path .gitignore --ext .ts,.tsx,.js,.jsx .",
        "serve": "http-server ./dist"
    },
    "dependencies": {
        "fs-extra": "^9.1.0",
        "recursive-readdir": "^2.2.2",
        "sass": "^1.32.5"
    },
    "devDependencies": {
        "@crgeary/configuration-prettier": "^1.0.3",
        "eslint": "^7.18.0",
        "eslint-config-prettier": "^7.2.0",
        "http-server": "^0.12.3",
        "husky": "^4.3.8",
        "lint-staged": "^10.5.3",
        "prettier": "^2.2.1"
    },
    "prettier": "@crgeary/configuration-prettier",
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "**/*.+(js|jsx)": [
            "eslint"
        ],
        "**/*.+(js|jsx|json)": [
            "prettier --write"
        ]
    }
}
