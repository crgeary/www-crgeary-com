{
    "name": "www-crgeary-com",
    "private": true,
    "description": "My personal website.",
    "author": "Christopher Geary <hello@crgeary.com>",
    "scripts": {
        "build": "node ./bin build",
        "watch": "node ./bin watch",
        "format": "prettier --ignore-path .gitignore --write .",
        "check-format": "prettier --list-different --ignore-path .gitignore .",
        "lint": "eslint --ignore-path .gitignore --ext .ts,.tsx,.js,.jsx .",
        "serve": "http-server ./dist",
        "prepare": "husky install",
        "pre-commit": "lint-staged"
    },
    "dependencies": {
        "@babel/core": "7.13.10",
        "@babel/preset-env": "7.13.10",
        "babel-loader": "8.2.2",
        "commander": "7.1.0",
        "css-loader": "5.1.1",
        "file-loader": "6.2.0",
        "fs-extra": "9.1.0",
        "mini-css-extract-plugin": "1.3.9",
        "modern-normalize": "1.0.0",
        "recursive-readdir": "2.2.2",
        "sass": "1.32.8",
        "sass-loader": "11.0.1",
        "webpack": "5.25.0"
    },
    "devDependencies": {
        "@crgeary/configuration-prettier": "1.0.3",
        "eslint": "7.22.0",
        "eslint-config-prettier": "8.1.0",
        "express": "4.17.1",
        "http-server": "0.12.3",
        "husky": "5.1.3",
        "lint-staged": "10.5.4",
        "prettier": "2.2.1",
        "webpack-dev-middleware": "4.1.0",
        "webpack-hot-middleware": "2.25.0"
    },
    "prettier": "@crgeary/configuration-prettier",
    "lint-staged": {
        "**/*.+(js|jsx)": [
            "eslint"
        ],
        "**/*.+(js|jsx|json)": [
            "prettier --write"
        ]
    },
    "browserslist": [
        "last 2 versions",
        "not IE >= 1"
    ]
}
